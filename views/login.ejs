<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('_menu', { page: 'login' }) %>

  <main class="hero">
    <div class="hero-content">
      <h2>Login to Campus Map Navigator</h2>
      <p>Access your personalized dashboard.</p>

      <form id="loginForm" class="login-form">
        <input type="email" id="email" placeholder="Email" required>
        <input type="password" id="password" placeholder="Password" required>
        <button type="submit" class="btn">Login</button>
        <p id="error" style="color:red; margin-top:10px;"></p>
      </form>

      <!-- Signup button -->
      <p>Don't have an account?</p>
      <a href="/auth/signup" class="btn">Sign Up</a>

      <button id="logoutBtn" class="btn" style="display:none; margin-top:1rem;">Logout</button>
    </div>
  </main>

  <script>
    window.firebaseConfig = {
      apiKey: "<%= process.env.FIREBASE_API_KEY %>",
      authDomain: "<%= process.env.FIREBASE_AUTH_DOMAIN %>",
      projectId: "<%= process.env.FIREBASE_PROJECT_ID %>"
    };
  </script>
  <script type="module" src="/js/auth-client.js"></script>
</body>
</html>
